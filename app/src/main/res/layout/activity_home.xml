<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4"
    tools:context=".Home">

    <!-- Image view to display the Troftey Logo(Text Version) -->
    <ImageView
        android:id="@+id/homeTrofteyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:src="@drawable/troftey_letter_black"
        app:layout_constraintTop_toTopOf="parent" />



    <!-- Image view to display button one -->
    <ImageView
        android:id="@+id/homeButtonOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:src="@drawable/black_button_rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeTrofteyText" />

    <!-- Text view to display text of button -->
    <TextView
        android:id="@+id/hbTextOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/homeButtonOne"
        app:layout_constraintEnd_toEndOf="@+id/homeButtonOne"
        app:layout_constraintStart_toStartOf="@+id/homeButtonOne"
        app:layout_constraintTop_toTopOf="@+id/homeButtonOne" />

    <TextView
        android:id="@+id/hpInfoText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/home_info_text"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/homeButtonOne"
        app:layout_constraintEnd_toEndOf="@+id/homeButtonOne"
        app:layout_constraintStart_toStartOf="@+id/homeButtonOne"
        app:layout_constraintTop_toBottomOf="@+id/homeTrofteyText" />

    <ImageView
        android:id="@+id/homeBottomImage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bottom_design_1"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>